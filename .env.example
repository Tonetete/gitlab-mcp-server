# GitLab MCP Server Configuration
# Copy this file to .env and fill in your actual values

# GitLab Personal Access Token (required)
# Create one at: https://gitlab.com/-/profile/personal_access_tokens
# Required scopes: api, read_user, read_repository, write_repository
GITLAB_TOKEN=your_gitlab_personal_access_token_here

# GitLab API Base URL (optional)
# Default: https://gitlab.com/api/v4
# For self-hosted GitLab instances, change to your instance URL
GITLAB_URL=https://gitlab.com/api/v4

# Default Project ID (optional)
# Can be numeric ID (e.g., 123) or path format (e.g., username/project-name)
# This will be used as default when no project is specified in operations
DEFAULT_PROJECT_ID=your_project_id_or_path_here